html
    head
        title Forum - #{title}
        
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro')
        link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
        link(rel='stylesheet', href='/assets/css/main.css', type='text/css')
            
        script(src='/assets/js/tinymce/tinymce.min.js')
        script(src='/assets/js/global/tinymce.js')
    body
        div.navbar
            div.left-menu
                a(href='/') Liste des question
                a(href='/q/publish') Publier une question
                
                if user && user.role == 'admin'
                    a(href='/admin') Administration
            
            div.right-menu
                if user
                    a(href='/account') #{user.name}
                    
                    a(href='/account')
                        img(src='/assets/img/avatars/' + user.avatar).avatar
                        
                    a(href='/account/logout')
                        i.material-icons power_settings_new
                else
                    a(href='/account/login') Connexion
                    a(href='/account/signup') Créer un compte
                
        div.title
            p
                if question
                    | Question ##{question.id}
                else
                    | #{title}
                
                span
                    if info
                        i.material-icons info
                        | #{info}
                    else
                        | Les informations relatives à la page s'affichent ici
                
        div.notification
            if errorMessage && errorMessage.length
                div.alert.error
                    p
                        i.material-icons warning
                        | !{errorMessage}
                        
            if successMessage && successMessage.length
                div.alert.success
                    p 
                        i.material-icons check
                        | !{successMessage}
